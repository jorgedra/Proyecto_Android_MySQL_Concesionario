<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#3B3B3C"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_item_vehiculo"
        android:layout_width="233dp"
        android:layout_height="317dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/cocheblanco" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_item_matricula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Matricula vehiculo"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_item_modelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Modelo: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_marca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Marca:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_caballos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Caballos:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_item_precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Precio: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_item_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Tipo: "
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>